{
  "name": "klingon-translator",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Star Trek themed Klingon â‡„ English universal translator with Google Translate-inspired interface",
  "author": {
    "name": "vaporjawn",
    "url": "https://github.com/vaporjawn"
  },
  "license": "MIT",
  "keywords": [
    "klingon",
    "translator",
    "star-trek",
    "react",
    "typescript",
    "material-ui",
    "universal-translator"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vaporjawn/klingon-translator"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "vitest run --reporter=verbose --coverage",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:ui": "playwright test --ui",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "quality:fix": "npm run type-check && npm run lint:fix && npm run format",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:install": "rm -rf node_modules package-lock.json && npm install",
    "prepare": "husky",
    "audit": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "serve": "npm run build && npm run preview",
    "validate": "npm run quality && npm run test:ci && npm run e2e",
    "precommit": "npm run quality:fix && npm run test:ci"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/lab": "^7.0.0-beta.17",
    "@mui/material": "^7.3.2",
    "framer-motion": "^12.23.22",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^16.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "npm:rolldown-vite@7.1.12",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.12"
  }
}
